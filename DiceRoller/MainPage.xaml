                            <Grid>
                                <TextBlock Text="D10" FontSize="72" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,-10" Opacity="0.5" />
                                <TextBlock Text="3" Grid.Column="2" Grid.Row="2" FontSize="128" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" />
