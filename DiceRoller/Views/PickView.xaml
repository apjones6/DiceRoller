<UserControl
    x:Class="DiceRoller.Views.PoolEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tool="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WP8"
    xmlns:c="clr-namespace:DiceRoller.Converters"
    xmlns:vm="clr-namespace:DiceRoller.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:PickViewModel, IsDesignTimeCreatable=True}"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Name="Root">
    
    <UserControl.Resources>
        <c:ActiveBrushWhenPositiveConverter x:Key="ActiveBrushWhenPositive"/>
        <c:VisibleWhenPositiveConverter x:Key="VisibleWhenPositive"/>
    </UserControl.Resources>
    
    <ListBox ItemsSource="{Binding Path=Pool.Dice}" Margin="-12,-12,0,0">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <tool:WrapPanel Margin="0,0,0,24" />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Button
                    Background="{Binding Count, Converter={StaticResource ActiveBrushWhenPositive}}"
                    Height="210"
                    Width="210"
                    Margin="12,12,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Tap">
                            <cmd:EventToCommand
                                Command="{Binding Path=DataContext.TapCommand, ElementName=Root, Mode=OneWay}"
                                CommandParameter="{Binding Type, Mode=OneWay}"
                                MustToggleIsEnabledValue="True" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="Hold">
                            <cmd:EventToCommand
                                Command="{Binding Path=DataContext.HoldCommand, ElementName=Root, Mode=OneWay}"
                                CommandParameter="{Binding Type, Mode=OneWay}"
                                MustToggleIsEnabledValue="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid>
                        <TextBlock
                            Text="{Binding Type, Mode=OneTime}"
                            FontSize="72"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="10,-10"
                            Opacity="0.5"
                            />
                        <TextBlock
                            Text="{Binding Count, Mode=OneWay}"
                            Visibility="{Binding Count, Converter={StaticResource VisibleWhenPositive}}"
                            FontSize="128"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="5"
                            />
                    </Grid>
                </Button>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>