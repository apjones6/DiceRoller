<UserControl
    x:Class="DiceRoller.Views.PoolEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tool="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WP8"
    xmlns:converter="clr-namespace:DiceRoller.Converters"
    mc:Ignorable="d"
    d:DataContext="{d:DesignData /Samples/PoolEditorViewModel.xaml}"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Name="Root">
    
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="DicePickButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <converter:ActiveBrushWhenPositiveConverter x:Key="ActiveBrushWhenPositive"/>
        <converter:VisibleWhenPositiveConverter x:Key="VisibleWhenPositive"/>
    </UserControl.Resources>
    
    <ListBox ItemsSource="{Binding PoolComponents}" Margin="-12,-12,0,0">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <tool:WrapPanel />
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Button
                    Style="{StaticResource DicePickButton}"
                    Background="{Binding Count, Converter={StaticResource ActiveBrushWhenPositive}}"
                    Height="210"
                    Width="210"
                    Margin="12,12,0,0"
                    >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Tap">
                            <cmd:EventToCommand
                                Command="{Binding Path=DataContext.TapCommand, ElementName=Root, Mode=OneWay}"
                                CommandParameter="{Binding Type, Mode=OneWay}"
                                MustToggleIsEnabledValue="True" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="Hold">
                            <cmd:EventToCommand
                                Command="{Binding Path=DataContext.HoldCommand, ElementName=Root, Mode=OneWay}"
                                CommandParameter="{Binding Type, Mode=OneWay}"
                                MustToggleIsEnabledValue="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid>
                        <TextBlock
                            Text="{Binding Type, Mode=OneTime}"
                            FontSize="72"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="10,-10"
                            Opacity="0.5"
                            />
                        <TextBlock
                            Text="{Binding Count, Mode=OneWay}"
                            Visibility="{Binding Count, Converter={StaticResource VisibleWhenPositive}}"
                            FontSize="128"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="5"
                            />
                    </Grid>
                </Button>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>