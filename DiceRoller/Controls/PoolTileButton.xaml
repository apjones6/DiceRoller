<UserControl
    x:Class="DiceRoller.Controls.PoolTileButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="200"
    x:Name="Root">

    <Border Background="{Binding BorderBackgroundBrush, ElementName=Root}" Tap="OnTap">
        <Grid>
            <TextBlock
                Text="{Binding DisplayName, ElementName=Root}"
                FontSize="72"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10,-10"
                Opacity="0.5"
                />
            <TextBlock
                Text="{Binding Count, ElementName=Root}"
                Visibility="{Binding CountVisibility, ElementName=Root}"
                FontSize="128"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="5"
                />
        </Grid>
    </Border>
</UserControl>